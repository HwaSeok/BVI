<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.frog.p.bitcoinvirtualinvestment">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bitcoin"
        android:label="비트코인 모의투자"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name="com.frog.p.bitcoinvirtualinvestment.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.frog.p.bitcoinvirtualinvestment.TableActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.frog.p.bitcoinvirtualinvestment.Exchange"
            android:theme="@style/popupTheme"
            android:screenOrientation="portrait"/>
    </application>

</manifest>